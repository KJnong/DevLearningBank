@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6 margin-top-20">
        <a href="@Url.Action("Withdrawal","Transaction", new {checkingAccountId = ViewBag.CheckingAccount} )" class="btn btn-primary btn-lg btn-block">
            <span class="glyphicon glyphicon-circle-arrow-down"></span>Withdrawal
        </a>
        <a href="@Url.Action("QuickCash","Transaction", new {checkingAccountId = ViewBag.CheckingAccount , amount = ViewBag.Amount })" class="btn btn-primary btn-lg btn-block">
            <span class="glyphicon glyphicon-flash"></span>Quick Cash R100
        </a>
        <a href="@Url.Action("Details","CheckingAccount")" class="btn btn-primary btn-lg btn-block">
            <span class="glyphicon glyphicon-question-sign"></span>Check Balance
        </a>
    </div>

    <div class="col-md-6 margin-top-20">
        <a href="@Url.Action("List","CheckingAccount")" class="btn btn-primary btn-lg btn-block">
            <span class="glyphicon glyphicon-question-sign"></span>All Accounts
        </a>
        <a href="@Url.Action("Transfare","Transaction" , new {checkingAccountId = ViewBag.CheckingAccount })" class="btn btn-primary btn-lg btn-block">
            <span class="glyphicon glyphicon-transfer"></span>Transfer Funds
        </a>
        <a href="@Url.Action("Deposit","Transaction", new {checkingAccountId = ViewBag.CheckingAccount })" class="btn btn-primary btn-lg btn-block">
            <span class="glyphicon glyphicon-circle-arrow-up"></span>Deposit
        </a>
    </div>


</div>

